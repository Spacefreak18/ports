# description	: A free and open source SVG icon theme for Linux, based on Paper Icon Set and Papirus

name=pop-icon-theme
version=20220805
_commit=2ccaf627d2a28d993dd4014642753471ba0d93bd
release=1
source="$name-$_commit.tar.gz::https://github.com/pop-os/icon-theme/archive/$_commit.tar.gz"

build() {

	cd icon-theme-$_commit
	venom-meson build
	DESTDIR=$PKG ninja -C build install
}
