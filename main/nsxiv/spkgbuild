# description	: Neo Simple X Image Viewer
# depends	: imlib2 libx11 libxft fontconfig libexif giflib

name=nsxiv
version=30
release=1
source="$name-$version.tar.gz::https://github.com/nsxiv/nsxiv/archive/tags/v$version.tar.gz"

build() {
	cd $name-$version
	make
	make PREFIX=/usr DESTDIR=$PKG install-all
}
