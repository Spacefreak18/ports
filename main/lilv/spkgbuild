# description : lilv library to make use of lv2 plugins as simple as possible 
# depends	 : sratom lv2

name=lilv
version=0.24.6
release=1
source="https://download.drobilla.net/$name-$version.tar.bz2"

build() {
	cd $name-$version
    ./waf configure --prefix=/usr
    ./waf build
	./waf install --destdir=$PKG
	rm -r $PKG/usr/etc/bash_completion.d/
}
