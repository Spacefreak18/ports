# description : suil library for loading and wrapping lv2 plugins UIs 
# depends	 : sratom lv2

name=suil
version=0.10.6
release=1
source="https://download.drobilla.net/$name-$version.tar.bz2"

build() {
	cd $name-$version
    ./waf configure --prefix=/usr
    ./waf build
	./waf install --destdir=$PKG
}
