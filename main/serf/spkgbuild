# description	: serf high performance http c client library
# depends	: apr apr-util krb5

name=serf
version=1.3.9
release=1
source="https://www.apache.org/dist/$name/$name-$version.tar.bz2
        SConstruct"

build() {
	cd $name-$version
	mv SConstruct SConstruct.bak
    cp $SRC/SConstruct ./
    #sed -i "/Append/s:RPATH=libdir,::" SConstruct
    #sed -i "/Default/s:lib_static,::" SConstruct
    #sed -i "/Alias/s:install_static,::" SConstruct
    #sed -i "/   print/{s/print/princ(/; s/$/)/}" SConstruct
    #sed -i "/get_contents()/s/,/.decode()&/" SConstruct
    scons PREFIX=/usr
    scons PREFIX=$PKG install
}
