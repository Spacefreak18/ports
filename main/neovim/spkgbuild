# description	: neovim  
# depends	: pynvim

name=neovim
version=0.7.0
release=1
#source="https://github.com/$name/$name/archive/refs/tags/v$version.tar.gz"
source="https://github.com/$name/$name/archive/refs/tags/nightly.tar.gz"

build() {
    #cd $name-$version
    cd neovim-nightly
    make CMAKE_INSTALL_PREFIX=/usr USE_BUNDLED=1 CMAKE_BUILD_TYPE=Release
    make DESTDIR=$PKG install
}
